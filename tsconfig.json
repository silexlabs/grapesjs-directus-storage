{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES5",
    "lib": ["ES2020", "DOM"],
    "declaration": true,
    "outDir": "./dist/es6",
    "esModuleInterop": true,
    "skipLibCheck": true, // This is needed to avoid errors with the `@types/node` package (Found 89 errors in the same file, starting at: ../../node_modules/@types/webpack/index.d.ts:32)
    "moduleResolution": "node"
  },
  "include": ["src"],
  "exclude": [
    "src/**/*.test.ts",
    "**/node_modules",
    "lib"
  ]
}